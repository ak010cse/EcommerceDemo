<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ProductDetailsActivity"></activity>
        <activity
            android:name=".activity.OrderActivity"
            android:theme="@style/RedProgress" />
        <activity
            android:name=".activity.MyWishListActivity"
            android:theme="@style/RedProgress" />
        <activity
            android:name=".activity.MyCartActivity"
            android:theme="@style/RedProgress" />
        <activity
            android:name=".activity.MyAccountActivity"
            android:theme="@style/RedProgress" />
        <activity
            android:name=".activity.CategoryActivity"
            android:theme="@style/RedProgress" />
        <activity
            android:name=".activity.RewardActivity"
            android:theme="@style/blue_theme" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/RedProgress"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/RedProgress" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/RedProgress">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>