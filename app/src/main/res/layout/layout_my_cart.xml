<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_5sdp"
    android:elevation="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_110sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:src="@drawable/vivo_apex"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Pixel XL 2 (Mirror Black,128 GB)"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/free_coupens_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/blue_toolbar"
                    android:src="@drawable/ic_tag"/>
                <TextView
                    android:id="@+id/free_coupens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/blue_toolbar"
                    android:text="Free Coupens"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="@dimen/_10sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/cut_rs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS."/>

                        <TextView
                        android:id="@+id/cut_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/cut_rs"
                        android:text="49,999/-"/>
                        <View
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="1dp"
                            android:layout_centerInParent="true"
                            android:background="@color/grey"/>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:text="RS."/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:text="45,999/-"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/offer_applied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offers applied"
                android:gravity="end"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorGreen"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:gravity="center"
                    android:background="@drawable/rectangle_black_border"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: "
                    android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/no_of_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/coupens_applied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_14sdp"
                    android:text="Coupen applied"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem coupen to get more discounts"
            android:paddingEnd="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/redeem_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" REDEEM "
            android:gravity="end"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rectangle_white_border"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_items"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove item"
            android:textSize="@dimen/_14sdp"/>

    </LinearLayout>

</LinearLayout>